@model IEnumerable<WebShopDB.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<!DOCTYPE HTML>

<html>
<head>
    <title>PC Builder</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/assetsi/css/main.css" />
</head>
<body>
    <h2>Index</h2>

    <p>
